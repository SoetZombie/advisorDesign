@using System.Web.UI.WebControls
@model AdvisorDesign.Models.SchoolRegisterModel
<div class="advisor-static">
    <div class=" register-page">
        <div class="container">
            <div class="register-content row col-md-9 col-lg-9 mx-auto">

                <h2 class="main-heading register">Registrace školy</h2>
                <div class="register-fields align-self-center">
                    <div class="register-common">
                        @Html.TextBoxFor(m => m.Name, new { placeholder="Název školy"})
                        @Html.ValidationMessageFor(m => m.Name)
                        @Html.TextBoxFor(m => m.NickContact, new { placeholder = "Jméno správce" })
                        @Html.ValidationMessageFor(m => m.NickContact)
                        @Html.TextBoxFor(m => m.Email, new { placeholder = "Přihlašovací e-mail" })
                        @Html.ValidationMessageFor(m => m.Email)
                        <div class="password-boxes">
                            @Html.PasswordFor(m => m.Password, new { placeholder = "Heslo do aplikace" })
                            @Html.ValidationMessageFor(m => m.Password)
                            <div class="fa fa-eye-slash"></div>
                        </div>
                        @Html.PasswordFor(m => m.Password, new { placeholder = "Znovu heslo pro kontrolu" })
                        @Html.ValidationMessageFor(m => m.Password)
   
                    </div>
                    
                    <div class="license-key-wrap">
                        <a href="#"title="Licenční klíč"   data-content="Licenční klíč Vám je automaticky zaslán po zaplacení objednávky na Váš email." data-toggle="popover" class="license-tooltip" data-trigger="hover">Kde najdu licenční klíč?</a>
                        <div class="license-key">
                            @Html.TextBoxFor(m => m.LicenseKey, new {placeholder = "Licenční klíč"})
                            @Html.ValidationMessageFor(m => m.LicenseKey)
                        </div>
                    </div>
                    <div class="register-btn">
                        <input type="submit" value="Registrovat školu" />
                    </div>
                </div>
            </div>

            <p>

            </p>
        </div>

    </div>
</div>
<script>
    $(document).ready(function(){
        $('[data-toggle="popover"]').popover(); 

    });
    $('.password-boxes .fa').click(function () {
        $(this).toggleClass('fa-eye-slash');
        $(this).toggleClass('fa-eye');
        if ($(this).siblings('input').attr('type') === 'text') {
            $(this).siblings('input').attr('type', 'password');
        } else {
            $(this).siblings('input').attr('type', 'text');
        }
        
    });
</script>